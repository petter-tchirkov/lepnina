block content

  // Menu
  +menu('home')

  //- Desktop page
  section.top
    .container
      ul.top__brands
        li
          img(src="/assets/images/kronopol.svg", alt="")
        li
          img(src="/assets/images/quickstep.svg", alt="")
        li
          img(src="/assets/images/orac.svg", alt="")
        li
